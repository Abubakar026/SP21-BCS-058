<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Agency</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/styles/screen.css">
</head>

<body>

    <section class="book" id="book">
        <h1 class="heading">
            <span>b</span>
            <span>o</span>
            <span>o</span>
            <span>k</span>
            <span class="space"></span>
            <span>n</span>
            <span>o</span>
            <span>w</span>
        </h1>

        <div class="row">
            <div class="image">
                <img src="/assets/book.jpg" alt="">
            </div>
            <hr>
            <h2>My Bookings</h2>
            <hr>
            <div class="booking-container">
                <% if (bookings.length > 0) { %>
                    <% bookings.forEach((booking) => { %>
                        <div class="booking-item">
                            <div class="booking-details">
                                <div class="booking-email" id="trip">
                                    <h4>Email:</h4>
                                   <h6><%=booking.email %> </h6> 
                                </div>
                                <div class="booking-info">
                                    <div class="fromto" id="trip">
                                        <h4>From To:</h4>
                                      <h6><%= booking.fromto %> </h6>
                                    </div>
                                    <div class="whereto" id="trip">
                                        <h4>Where To:</h4>
                                        <h6><%= booking.whereto %></h6>
                                    </div>
                                    <div class="dates">
                                        <div class="arrival" id="trip">
                                            <h4>Arrival Date:</h4>
                                            <h6><%= booking.arrival %></h6>
                                        </div>
                                        <div class="leaving" id="trip">
                                            <h4>Leaving Date:</h4>
                                            <h6><%= booking.leaving %></h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="no-feedback">No Booking.</p>
                <% } %>
            </div>
            
            <form action="/book", method="post">
                
                <div class="inputBox">
                    <h3>from to</h3>
                    <input type="text" name="fromto" placeholder="place name">
                </div>
                
                <div class="inputBox">
                    <h3>where to</h3>
                    <input type="text" name="whereto" placeholder="place name">
                </div>
                
                <div class="inputBox">
                    <h3>how many</h3>
                    <input type="number" name="howmany" placeholder="number of guests">
                </div>

                <div class="inputBox">
                    <h3>arrivals</h3>
                    <input type="date" name="arrival">
                </div>

                
                <div class="inputBox">
                    <h3>leaving</h3>
                    <input type="date" name="leaving">
                </div>
                <button type="submit" class="btn btn-primary">Book now</button>

            </form>

        </div>

    </section>    
<script src="/scripts/script.js"></script>

</body>
</html>